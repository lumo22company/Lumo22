# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# OpenAI API (for AI qualification)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Supabase (Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
# Service role (bypasses RLS) — required for appointments, and for forgot-password (customer lookup) when RLS is on. Supabase → Settings → API → service_role
# SUPABASE_SERVICE_ROLE_KEY=eyJ...
# Postgres connection string (for migrations). Supabase → Settings → Database → Connection string → URI
# DATABASE_URL=postgresql://postgres.[ref]:[PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres

# Calendly (Optional - for booking)
CALENDLY_API_KEY=your-calendly-api-key-here
CALENDLY_EVENT_TYPE_ID=your-event-type-id-here

# SendGrid (Optional - for emails)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME=Lumo 22

# Twilio (Optional - for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Digital Front Desk activation (single link used for all plans, or set per-plan links below)
ACTIVATION_LINK=https://buy.stripe.com/your-payment-link-here
# Optional: per-plan payment links (if unset, ACTIVATION_LINK is used for all)
# ACTIVATION_LINK_STARTER=
# ACTIVATION_LINK_STANDARD=
# ACTIVATION_LINK_PREMIUM=
# Chat Assistant standalone (£59/month). Required for /plans and /website-chat to show correct link.
CHAT_PAYMENT_LINK=https://buy.stripe.com/your-chat-payment-link-here
# Optional: email + chat bundles (Starter+chat £131, Standard+chat £198, Premium+chat £340)
# ACTIVATION_LINK_STARTER_BUNDLE=
# ACTIVATION_LINK_STANDARD_BUNDLE=
# ACTIVATION_LINK_PREMIUM_BUNDLE=

# 30 Days Captions (one-time product; Stripe payment link)
CAPTIONS_PAYMENT_LINK=https://buy.stripe.com/your-captions-payment-link-here
# Stripe secret key (Dashboard → Developers → API keys → Secret key) — needed so after payment we send customers to the intake form
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Stripe Price ID for 30 Days Captions one-off (Dashboard → Products → copy Price ID)
STRIPE_CAPTIONS_PRICE_ID=price_your_price_id_here
# Optional: 30 Days Captions subscription £79/month (enables subscription option on /captions)
# STRIPE_CAPTIONS_SUBSCRIPTION_PRICE_ID=price_your_subscription_price_id_here
# Extra platform add-ons (required for 2–5 platforms; run scripts/create_captions_extra_platform_prices.py)
# STRIPE_CAPTIONS_EXTRA_PLATFORM_PRICE_ID=price_xxx
# STRIPE_CAPTIONS_EXTRA_PLATFORM_SUBSCRIPTION_PRICE_ID=price_xxx
# Stories add-on: £19 one-off, £12/mo (optional; when set, product page shows Stories option when IG & Facebook selected)
# STRIPE_CAPTIONS_STORIES_PRICE_ID=price_xxx
# STRIPE_CAPTIONS_STORIES_SUBSCRIPTION_PRICE_ID=price_xxx
# Stripe webhook secret (Dashboard → Developers → Webhooks → Add endpoint → Signing secret)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Your site base URL (for intake/delivery links in emails)
BASE_URL=https://yourdomain.com
# Cron: shared secret for /api/captions-send-reminders (e.g. Railway cron). Generate: openssl rand -hex 32
# CRON_SECRET=
# Site chat widget: key for the Lumo 22 marketing site's chat bubble (demo + help). When set, a chat bubble appears on all pages. Any unique string, e.g. lumo22-site or generate: openssl rand -hex 12
# SITE_CHAT_WIDGET_KEY=
# Inbound domain for Digital Front Desk auto-reply (MX must point to SendGrid). e.g. inbound.lumo22.com
INBOUND_EMAIL_DOMAIN=inbound.lumo22.com

# Business Configuration
BUSINESS_NAME=Your Service Business
BUSINESS_PHONE=+1234567890
BOOKING_TIMEZONE=UTC

# Qualification Thresholds
MIN_QUALIFICATION_SCORE=60
AUTO_BOOK_ENABLED=True
